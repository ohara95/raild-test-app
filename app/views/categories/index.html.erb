<h1 class="text-center mt-4">一覧表示</h1>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>

<!-- 一覧のカテゴリー部分 -->
<div class="container">
  <% @categories.each do |category| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <!-- memo category.articlesって？-->
            <!-- consoleでCategoryみてもarticleってなくない？-->
            <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
          </div>
          <div class="card-footer text-muted">
            <small>作成 <%= time_ago_in_words(category.created_at) %> 前, 
            編集 <%= time_ago_in_words(category.updated_at) %> 前</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination">
  <%= will_paginate @categories, :container => false %>
</div>
